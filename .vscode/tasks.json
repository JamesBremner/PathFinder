{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tst",
            "options": { "cwd": "${workspaceFolder}" },
            "command": "mingw32-make.exe",
            "args": ["-f", ".vscode/makefile", "test" ],
            "problemMatcher": [ "$gcc" ],
            "group": { "kind": "build", "isDefault": true }
        },
        {
            "label": "clean",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "mingw32-make.exe",
            "args": [
                "-f",
                ".vscode/makefile",
                "clean"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "rebuild",
            "options": { "cwd": "${workspaceFolder}" },
            "command": "mingw32-make.exe",
            "args": ["-f", ".vscode/makefile", "rebuild" ],
            "problemMatcher": [ "$gcc" ],
            "group": { "kind": "build", "isDefault": true }
        },
    ]
}